{% extends 'base.html.twig' %}

{% block title %}Cash Converters | User database{% endblock %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/vendor/datatables/media/css/dataTables.bootstrap5.css') }}" />
{% endblock css %}

{% block body %}

    <header class="page-header">
        <h2>Users database</h2>

        <div class="right-wrapper text-end">
            <ol class="breadcrumbs">
                <li>
                    <a href="{{ url('app_home') }}">
                        <i class="bx bx-home-alt"></i>
                    </a>
                </li>

                <li><span>Users</span></li>

                <li><span>Database</span></li>

            </ol>
            <span class="sidebar-right-toggle"></span>
        </div>
    </header>

    <div class="row">
        <div class="col-md-12">
            <section class="card mb-4">
                <header class="card-header">
                    <div class="card-actions">
                        <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                        <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                    </div>

                    <h2 class="card-title">Users database</h2>
                </header>

                <div class="card-body">

                    <table class="table table-bordered table-striped mb-0" id="datatable-default">

                        <thead>
                        <tr>
                            <th>Email</th>
                            <th>Roles</th>
                            <th>Password</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.email }}</td>
                                <td>{{ user.roles|join(', ') }}</td>
                                <td>**********</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>
    <!-- end: page -->
    </section>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('/vendor/datatables/media/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('/vendor/datatables/media/js/dataTables.bootstrap5.min.js') }}"></script>
